<h1>Editing level</h1>
<% form_for(@level) do |f| %>
<%= f.error_messages %>
<p>
  <%= f.label :name %>
  <br/>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :describe %>
  <br/>
  <%= f.text_field :describe %>
</p>
<p>
  <%= f.submit 'Update' %>
</p>
<% end %>
<%= link_to 'Show', @level %> |<%= link_to 'Back', levels_path %>